unction() { const location = this.value; const bungalovSelect = document.getElementById('bungalov-type'); bungalovSelect.innerHTML = '<option value="">Bungalov tipi seçiniz</option>'; if (location && bungalovTypes[location]) { bungalovTypes[location].forEach(type => { const option = document.createElement('option'); option.value = type.value; option.textContent = type.text; option.dataset.price = type.price; bungalovSelect.appendChild(option); }); } }); // Tarihleri bugünden sonraya sınırla const today = new Date().toISOString().split('T')[0]; document.getElementById('checkin').min = today; document.getElementById('checkout').min = today; // Çıkış tarihi giriş tarihinden sonra olsun document.getElementById('checkin').addEventListener('change', function() { const checkinDate = new Date(this.value); const nextDay = new Date(checkinDate); nextDay.setDate(nextDay.getDate() + 1); document.getElementById('checkout').min = nextDay.toISOString().split('T')[0]; }); // Form gönderimi document.getElementById('reservationForm').addEventListener('submit', function(e) { e.preventDefault(); const formData = new FormData(this); const data = Object.fromEntries(formData); // Tarihleri kontrol et const checkin = new Date(data.checkin); const checkout = new Date(data.checkout); const nights = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24)); if (nights <= 0) { alert('Çıkış tarihi giriş tarihinden sonra olmalıdır.'); return; } // Fiyat hesaplama const bungalovSelect = document.getElementById('bungalov-type'); const selectedOption = bungalovSelect.options[bungalovSelect.selectedIndex]; const pricePerNight = selectedOption ? parseInt(selectedOption.dataset.price) : 0; const totalPrice = pricePerNight * nights; // Bildirim göster const notification = document.getElementById('notification'); notification.innerHTML = ` <strong>Rezervasyon Özeti:</strong><br> ${data.name} - ${data.phone}<br> ${nights} gece konaklama<br> Toplam Tutar: ${totalPrice.toLocaleString('tr-TR')}₺<br> <em>Talebiniz 24 saat içinde onaylanacaktır.</em> `; notification.style.display = 'block'; // Formu temizle this.reset(); document.getElementById('bungalov-type').innerHTML = '<option value="">Önce lokasyon seçiniz</option>'; // Bildirimi 8 saniye sonra gizle setTimeout(() => { notification.style.display = 'none'; }, 8000); }); // Smooth scrolling document.querySelectorAll('a[href^="#"]').forEach(anchor => { anchor.addEventListener('click', function (e) { e.preventDefault(); const target = document.querySelector(this.getAttribute('href')); if (target) { target.scrollIntoView({ behavior: 'smooth', block: 'start' }); } }); }); // Animation on scroll const observerOptions = { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }; const observer = new IntersectionObserver((entries) => { entries.forEach(entry => { if (entry.isIntersecting) { entry.target.style.opacity = '1'; entry.target.style.transform = 'translateY(0)'; } }); }, observerOptions); document.querySelectorAll('.animate-fade-in').forEach((el) => { el.style.opacity = '0'; el.style.transform = 'translateY(30px)'; el.style.transition = 'all 0.8s ease-out'; observer.observe(el); }); </script> </body> </html>
